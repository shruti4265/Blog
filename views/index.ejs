<%- include("partials/header.ejs") %>
<main class="posts">
    <% if(posts.length>0){ %>
        <% for(i=0;i<posts.length;i++) { %>
            <div class="post-card">
                <h2>Blog Title <%= i+1 %>:<%= posts[i].title %></h2>
                <p><%= posts[i].content ? posts[i].content.split(" ").slice(0, 20).join(" ") :"" %>...</p>
                <div class="post-actions">
                    <a href="/read-more/<%= i  %>" class=" point read-more ">Read More</a>
                    <a href="/delete/<%= i  %>"><i class="fa-solid fa-trash point"></i></a>
                </div>
            </div>
            <% } %>
    <% } else { %>
        <p style="text-align:center;">No posts yet. Click "New Post" to get started.</p>
    <% } %>
    <%- include("partials/footer.ejs") %>
